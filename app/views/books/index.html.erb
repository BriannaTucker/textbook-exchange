<h2>Add a Book</h2>

<%# Comment %>



<%= form_for @books do |bt| %>
   <%= bt.label :title, "Title" %>
   <%= bt.text_field :title %>
   
   <%= bt.label :isbn, "ISBN" %>
   <%= bt.text_field :isbn %>

   <%= bt.label :author, "Author" %>
   <%= bt.text_field :author %>
   
   <%= bt.submit "Add posting" %>
   
<% end %>


