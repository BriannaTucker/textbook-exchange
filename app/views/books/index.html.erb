<% if logged_in? %>
    <h1>Hello <%= current_user.name%></h1>
<% else  %>
    <h1>Hello </h1>
<% end %>


<h2> Here are our novels for sale</h2>


<%= form_for "",url: books_path, role: "search", method: :get do %> 
  <p>
    <%= text_field_tag :search, @search_term, placeholder: "Search..." %>
  </p>
<% end %>


<table border="1">
    <tbody>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Added by</th>

        </tr>
        
        <% @books.each do |x| %>
            <tr>
                <td><%= x.title %></td>
                <td><%= x.isbn %></td>
                <td><%#= @users.find_by_id(x.guser).name unless @users.find_by_id(x.guser).nil?%></td>
                <% if logged_in? %>
                    <% if current_user.id == x.user_id %>
                        <td><%= button_to 'Delete', x, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                    <% end %>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>
