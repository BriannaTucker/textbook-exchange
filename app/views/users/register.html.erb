<h2>Register</h2>

<%# Comment %>



<%= form_for @users do |bt| %>
   <%= bt.label :name, "Name", required: true %>
   <%= bt.text_field :name %>
   
   <%= bt.label :password, "Password", minlength: 8, required: true %>
   <%= bt.password_field :password %>
   
   <%= bt.label :phone, "Phone", minlength: 9, maxlength: 10, required: true %>
   <%= bt.text_field :phone %>

   
   <%= bt.submit "Register" %>


<% end %>


